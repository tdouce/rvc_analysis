<h1>Divers</h1>

<table>
  <tr>
    <th> First Name </th>
    <th> Last Name </th>
    <th></th>
    <th></th>
  </tr>
  <% @divers.each do |diver| %>
    <tr>
      <td> <%= diver.first_name %> </td>
      <td> <%= diver.last_name %> </td>
      <td><%= button_to "edit", edit_diver_url(diver), {:method => :get}%></td>
      <td><%= button_to "delete", diver_url(diver), :method => :delete, :title => "Delete Diver" %></td>
    </tr>
  <% end %>
</table>
