<h1>Create Visit</h1>

<%= form_for @visit do |f| %>

  <%= render 'shared/errormessages', :object => f.object %>

  <%= f.label "Sample Site" %> 
  <%= f.collection_select :site_id, Site.all, :id, :name %> <br />

  <br />

  <%= f.fields_for :diver_visits do |builder| %>
    <%= builder.label "Diver" %>
    <%= builder.collection_select :diver_id, Diver.all, :id, :full_name %> <br />
  <% end %>

  <br />

  <%= f.label "Dive Start Time" %>
  <%= f.time_select :dive_start, {:minute_step => 5, :ampm => true } %> <br />

  <%= f.label "Sample Start Time" %>
  <%= f.time_select :sample_start, {:minute_step => 5, :ampm => true } %> <br />

  <%= f.label "Sample End Time" %>
  <%= f.time_select :sample_end, {:minute_step => 5, :ampm => true } %> <br />

  <%= f.label "Dive End Time" %>
  <%= f.time_select :dive_end, {:minute_step => 5, :ampm => true } %> <br />

  <br />


  <%= f.label "Max Depth" %>
  <%= f.text_field :substrate_max_depth %><br />
  <%= f.label "Min Depth" %>
  <%= f.text_field :substrate_min_depth %><br />
  <br />
  <%= f.submit %>
<% end %>
